<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-md-6">
    <p>
      <strong>Name:</strong>
      <%= @proyect.name %>
    </p>
      <%= link_to 'Edit', edit_proyect_path(@proyect) %> |
      <%= link_to 'Back', proyects_path %>
      <br>

      <h2> <strong>Trabajadores de <%= @proyect.name %>:</strong> </h2>
      <table class="table">
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @proyect.workers.each do |worker| %>
              <tr>
                <td><%= worker.name %></td>
                <td><%= link_to 'Quitar', proyect_allocation_path(@proyect, {worker_id: worker.id}), method: :delete %></td>
              </tr>
          <% end %>
        </tbody>
      </table>
</div><!--FIN COLUMNA IZQUIERDA-->

  <div class="col-md-6">
    <h2> Trabajadores Sin Asignar a <%= @proyect.name %>: </h2>
    <table class="table">
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @workers.each do |worker| %>
          <% unless @proyect.workers.include?(worker)  %>
            <tr>
              <td><%= worker.name %></td>
              <td><%= link_to 'Asignar', proyect_allocations_path(@proyect, {worker_id: worker.id}), method: :post %></td>
            </tr>
          <% end  %>
        <% end %>
      </tbody>
    </table>
  </div><!--FIN COLUMNA DERECHA-->

</div>
